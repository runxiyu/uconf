# vim: filetype=swayconfig

xwayland enable

set $mod Mod4
set $left h
set $down j
set $up k
set $right l

set $term footclient
set $menu wmenu-run
set $browser firefox
set $filemanager footclient lf

output eDP-1 {
	resolution 2560x1600
	scale 1.6
	position 0,0
	bg #000000 solid_color
}

exec swayidle -w \
         timeout 350 'swaylock -f -c 000000 -i /dev/null' \
         timeout 300 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -c 000000 -i /dev/null'
bindsym $mod+Escape exec 'swaylock -f -c 000000 -i /dev/null'

exec foot --server
exec mako
exec /usr/libexec/xdg-desktop-portal-wlr
exec dbus-update-activation-environment --all

input "1:1:AT_Translated_Set_2_keyboard" {
	xkb_layout "gbcustom"
	xkb_options "compose:ralt"
}

input "2:10:TPPS/2_IBM_TrackPoint" {
	accel_profile flat
}

input "1452:641:Apple_Internal_Keyboard_/_Trackpad" {
	tap disabled
	dwt disabled
	natural_scroll enabled
	xkb_layout "us"
	xkb_options "compose:ralt,caps:backspace"
}

# Don't use middle click for scrolling, so it works properly in acme
input * scroll_button disable

bindsym $mod+Return exec $term
bindsym $mod+Shift+Return exec $menu
bindsym $mod+w exec $browser
bindsym $mod+r exec $filemanager

bindsym $mod+Shift+c kill

bindsym $mod+Shift+r reload
bindsym $mod+Shift+q exec swaymsg exit

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Use mouse to drag/resize windows, warp the mouse, etc
floating_modifier $mod normal
mouse_warping container

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+t layout tabbed
bindsym $mod+d layout toggle split

bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle
# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

bindsym $mod+Shift+s move scratchpad
bindsym $mod+s scratchpad show

bindsym XF86MonBrightnessDown exec brightnessctl --exponent=2 s 4%-
bindsym XF86MonBrightnessUp exec brightnessctl --exponent=2 s 4%+
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym XF86Search exec grim -c

gaps inner 10
gaps outer -10
default_border pixel 1
smart_borders no_gaps
smart_gaps on
hide_edge_borders none

client.focused           #905090 #905090 #ffffff #A070A0 #905090      
client.focused_inactive  #333333 #5f676a #ffffff #484e50 #5f676a      
client.focused_tab_title #333333 #5f676a #ffffff
client.unfocused         #222222 #222222 #888888 #292d2e #222222      
client.urgent            #2f343a #ff0000 #ffffff #ff0000 #ff0000      
client.placeholder       #000000 #0c0c0c #ffffff #000000 #0c0c0c

bar {
	font monospace 10
	position top
	status_command ~/.local/bin/rxbar
	mode dock
	colors {
		statusline #aaaaaa
		background #000000
		inactive_workspace #000000 #000000 #aaaaaa
		active_workspace #000000 #000000 #905090
		focused_workspace #905090 #905090 #ffffff
		urgent_workspace #ff0000 #ff0000 #ffffff
	}
}

include /etc/sway/config.d/*

for_window [title="foot-scratchpad"] {
	move scratchpad
	resize set 1024 768
}
exec foot -T foot-scratchpad sh -c 'while true; do nvim ~/Personal/scratch.txt; done'
